package org.buildmlearn.learnfrommap.questionmodule;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

import android.content.Context;

public class XmlParser {
	private Context mContext;
	private String data;

	public XmlParser(Context mContext)
	{
		this.mContext = mContext;
	}
	
	public String readFileFromAsset() throws IOException
	{
		BufferedReader reader = null;
		try {
			InputStreamReader is = new InputStreamReader(mContext.getAssets().open("filename.txt"));
		    reader = new BufferedReader(is);
		    String mLine = reader.readLine();
		    data = "";
		    while (mLine != null) 
		    {
		    	data += mLine;
		    	mLine = reader.readLine();
		    }
		} catch (IOException e) {
		    //log the exception
		} finally {
		    if (reader != null) {
		        reader.close();
		    }
		}
		return data;
	}
	
}
