package org.buildmlearn.learnfrommap.questionmodule;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

import javax.xml.parsers.DocumentBuilder;
import javax.xml.parsers.DocumentBuilderFactory;
import javax.xml.parsers.ParserConfigurationException;

import org.w3c.dom.Document;
import org.w3c.dom.NodeList;
import org.xml.sax.SAXException;

import android.content.Context;
import android.util.Log;

public class XmlParser {
	private Context mContext;
	private String data;

	public XmlParser(Context mContext)
	{
		this.mContext = mContext;
	}
	

	
	public void fetchQuestions()
	{
		try {
			DocumentBuilderFactory dbFactory = DocumentBuilderFactory.newInstance();
			DocumentBuilder dBuilder;
			dBuilder = dbFactory.newDocumentBuilder();
			Document doc = dBuilder.parse(mContext.getAssets().open("test.xml"));
			Log.d("Root", doc.getDocumentElement().getNodeName());
			NodeList nlist = doc.getElementsByTagName("question");
			Log.d("LENGTH", ""+nlist.getLength());
		} catch (ParserConfigurationException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (SAXException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
	}
	
	
}
