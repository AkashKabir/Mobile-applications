package org.buildmlearn.learnfrommap.questionmodule;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

import javax.xml.parsers.DocumentBuilder;
import javax.xml.parsers.DocumentBuilderFactory;

import org.w3c.dom.Document;

import android.content.Context;

public class XmlParser {
	private Context mContext;
	private String data;

	public XmlParser(Context mContext)
	{
		this.mContext = mContext;
	}
	
	public String readFileFromAsset()
	{
		BufferedReader reader = null;
		try {
			InputStreamReader is = new InputStreamReader(mContext.getAssets().open("test.xml"));
		    reader = new BufferedReader(is);
		    String mLine = reader.readLine();
		    data = "";
		    while (mLine != null) 
		    {
		    	data += mLine;
		    	mLine = reader.readLine();
		    }
		    if (reader != null) {
		        reader.close();
		    }
		} catch (IOException e) {
		    //log the exception
		} 
		return data;
	}
	
	public void someData()
	{
		String data = readFileFromAsset();
		DocumentBuilderFactory dbFactory = DocumentBuilderFactory.newInstance();
		DocumentBuilder dBuilder = dbFactory.newDocumentBuilder();
		Document doc = dBuilder.parse(mContext.getAssets().open("test.xml));
		
	}
	}
	
}
