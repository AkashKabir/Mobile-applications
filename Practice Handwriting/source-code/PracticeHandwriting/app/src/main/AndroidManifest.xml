<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.buildmlearn.practicehandwriting" >

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ActionBarTheme" >
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LanguageActivity"
            android:label="@string/title_activity_language" >
        </activity>
        <activity
            android:name=".activities.MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name=".activities.IncompleteActivity"
            android:label="@string/title_activity_incomplete" >
        </activity>
        <activity
            android:name=".activities.CharacterSelectionActivity"
            android:label="@string/title_activity_character_selection" >
        </activity>
        <activity
            android:name=".activities.PracticeBaseActivity"
            android:label="@string/title_activity_practice" >
        </activity>
        <activity
            android:name=".activities.WordSelectionActivity"
            android:label="@string/title_activity_word_selection" >
        </activity>
        <activity
            android:name=".activities.TimeTrialResultActivity"
            android:label="@string/title_activity_time_trial_result" >
        </activity>
        <activity
            android:name=".activities.PracticeActivity"
            android:label="@string/title_activity_practice" >
        </activity>
        <activity
            android:name=".activities.FreehandActivity"
            android:label="@string/title_activity_freehand" >
        </activity>
        <activity
            android:name=".activities.TimeTrialActivity"
            android:label="@string/title_activity_time_trial" >
        </activity>
    </application>

</manifest>
