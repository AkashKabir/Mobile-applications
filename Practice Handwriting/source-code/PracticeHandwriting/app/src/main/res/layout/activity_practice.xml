<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBg"
    android:gravity="center"
    tools:context="org.buildmlearn.practicehandwriting.practice.PracticeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/PracticeToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/ActionbarBg"
        app:title="@string/app_name"
        app:titleTextAppearance="@style/AppTheme.Toolbar.Title"
        app:navigationIcon="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="400sp"
        android:textColor="#000000"/>

    <org.buildmlearn.practicehandwriting.practice.DrawingView
        android:id="@+id/drawing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <com.software.shell.fab.ActionButton
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:button_color="@color/ButtonBg"
        app:image="@drawable/ic_done"/>


    <com.software.shell.fab.ActionButton
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:button_color="@color/ButtonBg"
        app:image="@drawable/ic_reset"/>

</RelativeLayout>
