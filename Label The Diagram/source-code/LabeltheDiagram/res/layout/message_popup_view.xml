<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="60dp"
    android:background="@drawable/shadow_small"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.example.labelthediagram">

    <TextView
        android:id="@+id/mTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="No badges to view !"
        android:textColor="#616161"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.buildmlearn.labeldiagram.widget.CustomFontManager
        android:id="@+id/mBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mTitle"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Hey ! You have not yet achieved badges to view. Hurry up go grab some badges !"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#212121"
        android:textSize="20sp"
        app:typeface="roboto_thin" />

    <ImageView
        android:id="@+id/cancel_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="235dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/correct_btn" />

</RelativeLayout>
