        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/foveaBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/mainDiagramHeart"
        android:layout_alignTop="@+id/mainDiagramHeart"
